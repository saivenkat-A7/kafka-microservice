{
  "name": "kafka-event-driven-microservice",
  "version": "1.0.0",
  "description": "Event-driven microservice with Apache Kafka - Producer and Consumer",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "jest --coverage --runInBand",
    "test:unit": "jest tests/unit --coverage",
    "test:integration": "jest tests/integration --runInBand --forceExit",
    "lint": "eslint src tests"
  },
  "keywords": [
    "kafka",
    "microservice",
    "event-driven",
    "nodejs",
    "express"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "kafkajs": "^2.2.4",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "nodemon": "^3.0.2",
    "eslint": "^8.56.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "testTimeout": 30000
  }
}